<form id="form" method="POST" > {{!-- action="/admin/store-product" --}}
    <div class="create_product">
        <div class="header-toggle">
            <a href="/admin/view-product" class="product-view">Products view</a>
            <a href="#" class="add-product" style="color: #1A94FF;">
                <i class='bx bx-plus'></i>
                Add product
            </a>
            <div class="separate"></div>
        </div>
        <div class="container">
            <div class="container-left">
                <div class="item">
                    <span>Product Name</span>
                    <div class="wrap-product-name-input long-input">
                        <input type="text" name="name" id="productName" class="style-input">
                        <p class="product-name__warning">Do not exceed 20 characters when entering the product name.</p>
                    </div>
                </div>
                <div class="item">
                    <span>Category</span>
                    <select name="category" id="category" class="long-input style-input">
                        <option value=""></option>
                        <option value="">Giày vải</option>
                        <option value="">Giày đinh</option>
                        <option value="">Giày đế bằng</option>
                        <option value="">Giày chống trượt</option>
                        <option value="">Giày fulsal</option>
                    </select>
                </div>
                <div class="item">
                    <span>Brand</span>
                    <select name="brand" id="brand" class="long-input style-input">
                        <option value=""></option>
                        <option value="">Adidas</option>
                        <option value="">Nike</option>
                        <option value="">Zocker</option>
                        <option value="">Mitre</option>
                        <option value="">Mizuno</option>
                    </select>
                </div>
                <div class="item">
                    <div class="wrap-price">
                        <span class="mr-10">Price</span>
                        <input type="text" name="price" class="short-input style-input" id="price">
                    </div>
                    <div class="wrap-discount">
                        <span class="mr-10">Discount</span>
                        <input type="text" name="discount" class=" input-discount short-input style-input" id="discount">
                    </div>
                </div>
                <div class="item">
                    <div class="wrap-total">
                        <span class="mr-10">Total</span>
                        <input type="text" name="total" class="short-input style-input" id="total">
                    </div>
                    <div class="wrap-sold">
                        <span class="mr-10">Sold</span>
                        <input type="text" name="sold" class="short-input style-input" id="sold">
                    </div>
                </div>
                <div class="item">
                    <span class="mr-10">Size</span>
                    <div class="wrap-size-option">

                        <div class="wrap-insert-size">
                            <input type="text" id="" class="input-size" placeholder="add size">
                            <i class='bx bx-plus-circle add-size' onclick="addSize()"></i>
                        </div>
                    </div>
                </div>
            </div>
            <div class="container-right">
                <div class="item">
                    <span class="mr-10">Color</span>
                    <div class="wrap-color-option">

                        <div class="wrap-insert-color">
                            <input type="text" id="" class="input-color" placeholder="add color">
                            <i class='bx bx-plus-circle add-color' onclick="addColor()"></i>
                        </div>
                    </div>
                </div>
                <div class="wrap-profuct-images">
                    <span class="title">Product Images</span>
                    <div class="list-imgs">
                        <label for="file-upload1" id="item-img1" class="item-img"
                            onchange="ImagesFileAsURL('file-upload1','item-img1')">
                            <input type="file" id="file-upload1">
                            <i class='bx bxs-image-add'></i>
                            <span>Add image here</span>
                        </label>
                        <label for="file-upload2" id="item-img2" class="item-img"
                            onchange="ImagesFileAsURL('file-upload2','item-img2')">
                            <input type="file" id="file-upload2">
                            <i class='bx bxs-image-add'></i>
                            <span>Add image here</span>
                        </label>
                        <label for="file-upload3" id="item-img3" class="item-img"
                            onchange="ImagesFileAsURL('file-upload3','item-img3')">
                            <input type="file" id="file-upload3">
                            <i class='bx bxs-image-add'></i>
                            <span>Add image here</span>
                        </label>
                        <label for="file-upload4" id="item-img4" class="item-img"
                            onchange="ImagesFileAsURL('file-upload4','item-img4')">
                            <input type="file" id="file-upload4">
                            <i class='bx bxs-image-add'></i>
                            <span>Add image here</span>
                        </label>
                        <label for="file-upload5" id="item-img5" class="item-img"
                            onchange="ImagesFileAsURL('file-upload5','item-img5')">
                            <input type="file" id="file-upload5">
                            <i class='bx bxs-image-add'></i>
                            <span>Add image here</span>
                        </label>
                    </div>
                    <p class="image-description">You need to add at least 4 images.Pay attention to the quality of the
                        pictures you add, comply with
                        the background color standards. Pictures must be in certain dimensions. Notice that the product
                        shows all the details</p>
                </div>
                <div>
                    <button type="submit" class="button" style="background-color: #1A94FF; color:#fff;">Add Product</button>
                    <button class="button">Save Product</button>
                </div>
            </div>
        </div>
    </div>
</form>