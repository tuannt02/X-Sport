<form class="container" method="POST">
    <div class="form-group">
        <label for="exampleInputText1">Tài khoản</label>
        <input type="text" class="form-control" id="exampleInputText1" aria-describedby="emailHelp" placeholder="Nhập tài khoản" name="username">
        <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">Mật khẩu</label>
        <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Nhập mật khẩu" name="password">
    </div>
    <div class="form-check">
        <input type="checkbox" class="form-check-input" id="exampleCheck1">
        <label class="form-check-label" for="exampleCheck1">Duy trì đăng nhập</label>
    </div>
    <button type="submit" class="btn btn-primary">Đăng nhập</button>
</form>